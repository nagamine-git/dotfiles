alias supabase='npx supabase'


# LXD Kali 起動＆シェル投入
kali() {
  xhost +SI:localuser:"$USER" &>/dev/null
  st=$(lxc info kali 2>/dev/null \
       | grep '^Status:' \
       | cut -d' ' -f2 \
       | tr '[:lower:]' '[:upper:]')

  if [[ -z $st ]]; then
    echo "→ Launching new Kali container…"
    lxc launch images:kali/rolling kali
  elif [[ $st != RUNNING ]]; then
    echo "→ Starting Kali container…"
    lxc start kali
  fi

  lxc exec kali -- /bin/bash --login
}

alias k='kali'